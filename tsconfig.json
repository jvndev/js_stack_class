{
  "compilerOptions": {
    "lib": [
      "ES2022"
    ],
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ES2022",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "*.ts"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}